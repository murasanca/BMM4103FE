<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bmm4103fe"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView
        android:background="@color/transparent"
        android:contentDescription="@string/gImageView"
        android:id="@+id/gImageView"
        android:layout_height="64dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_width="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_round_groups_24"/>

    <TextView
        android:fontFamily="casual"
        android:gravity="center"
        android:id="@+id/gNameTextView"
        android:layout_height="0sp"
        android:layout_width="0sp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/gNameTextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/gDescriptionTextView"
        app:layout_constraintEnd_toStartOf="@+id/gNumberTextView"
        app:layout_constraintStart_toEndOf="@+id/gImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="casual"
        android:gravity="center"
        android:id="@+id/gNumberTextView"
        android:layout_height="64dp"
        android:layout_width="64dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/gPositionTextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="casual"
        android:gravity="center"
        android:id="@+id/gDescriptionTextView"
        android:layout_height="0sp"
        android:layout_width="0sp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/gDescriptionTextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gNumberTextView"
        app:layout_constraintStart_toEndOf="@+id/gImageView"
        app:layout_constraintTop_toBottomOf="@+id/gNameTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>